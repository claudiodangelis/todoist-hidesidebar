{
    "author": "Claudio d'Angelis (https://claudiodangelis.com)",
    "description": "Hide sidebar from Todoist",
    "name": "Todoist Zen",
    "manifest_version": 2,
    "version": "0.1.0",
    "homepage_url": "https://github.com/claudiodangelis/todoist-hidesidebar",
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "https://todoist.com/app*"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "main.css"
            ],
            "run_at": "document_end"
        }
    ]
}
